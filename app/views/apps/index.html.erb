<div class='container'>
  <div class='page'>
    <%= render 'partials/page_title' %>

    <div class='row'>
      <div class='col'>
        <table class='table table-striped table-bordered table-hover'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
            <tr>
          </thead>
          <tbody>
            <% @apps.each do |app| %>
              <tr>
                <td><%= app.name %></td>
                <td><%= truncate(app.description) %></td>
                <td>
                  <%= link_to 'View', app_path(app) %> |
                  <%= link_to 'Edit', edit_app_path(app) %> |
                  <%= link_to 'Delete', app_path(app), data: {"turbo-method": :delete, turbo_confirm: 'You sure?'} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class='row'>
      <div class='col text-center'>
        <%= render 'partials/pagy_menu' %>
      </div>
    </div>
  </div>
</div>

