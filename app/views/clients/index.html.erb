<div class='container'>
  <div class='page'>
    <%= render 'partials/page_title' %>

    <div class='row'>
      <div class='col'>
        <table class='table table-striped table-bordered table-hover'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Time Period</th>
              <th>Actions</th>
            <tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td><%= client.name %></td>
                <td><%= client.time_period %></td>
                <td>
                  <%= link_to 'View', client_path(client) %> |
                  <%= link_to 'Edit', edit_client_path(client) %> |
                  <%= link_to 'Delete', client_path(client), data: {"turbo-method": :delete, turbo_confirm: 'You sure?'} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
    
  </div>
</div>

<%= render 'partials/pagy_menu' %>
